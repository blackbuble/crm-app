{
    "phases": {
        "setup": {
            "nixPkgs": [
                "php83",
                "php83Packages.composer",
                "nodejs_20"
            ],
            "aptPkgs": [
                "libpng-dev",
                "libjpeg-dev",
                "freetype6-dev"
            ]
        },
        "install": {
            "cmds": [
                "composer install --no-dev --optimize-autoloader --no-interaction",
                "npm ci"
            ]
        },
        "build": {
            "cmds": [
                "npm run build"
            ]
        }
    },
    "variables": {
        "NIXPACKS_PHP_ROOT_DIR": "public",
        "NIXPACKS_PHP_FALLBACK_PATH": "/index.php"
    }
}